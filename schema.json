{
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "The title of the game"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Brief description of the game"
    },
    "attempts_per_game": {
      "type": "number",
      "minimum": 1,
      "maximum": 100,
      "description": "Number of attempts allowed per game"
    },
    "price_for_10_attempts": {
      "type": "number",
      "minimum": 0,
      "description": "Price in USDC for purchasing 10 additional attempts"
    },
    "eth_wallet_owner": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$",
      "description": "Ethereum wallet address of the game owner"
    },
    "guesses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "emojis": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "Emoji combination to be guessed"
          },
          "hint": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Helpful hint for the player"
          },
          "answer": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "Correct answer for the emoji combination"
          },
          "result_description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Explanation of the answer shown after guessing"
          }
        },
        "required": ["emojis", "hint", "answer", "result_description"],
        "additionalProperties": false
      }
    }
  },
  "required": ["title", "description", "attempts_per_game", "price_for_10_attempts", "eth_wallet_owner", "guesses"],
  "additionalProperties": false
}
